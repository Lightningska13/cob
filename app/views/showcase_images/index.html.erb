<h1>Listing showcase_images</h1>

<table>
  <tr>
    <th>Photo file name</th>
    <th>Photo content type</th>
    <th>Photo file size</th>
    <th>Position</th>
    <th>Caption</th>
    <th>Showcase</th>
  </tr>

<% @showcase_images.each do |showcase_image| %>
  <tr>
    <td><%=h showcase_image.photo_file_name %></td>
    <td><%=h showcase_image.photo_content_type %></td>
    <td><%=h showcase_image.photo_file_size %></td>
    <td><%=h showcase_image.position %></td>
    <td><%=h showcase_image.caption %></td>
    <td><%=h showcase_image.showcase_id %></td>
    <td><%= link_to 'Show', showcase_image %></td>
    <td><%= link_to 'Edit', edit_showcase_image_path(showcase_image) %></td>
    <td><%= link_to 'Destroy', showcase_image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New showcase_image', new_showcase_image_path %>