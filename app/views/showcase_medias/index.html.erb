<h1>Listing showcase_medias</h1>

<table>
  <tr>
    <th>Media file name</th>
    <th>Media content type</th>
    <th>Media file size</th>
    <th>Caption</th>
    <th>Showcase</th>
  </tr>

<% @showcase_medias.each do |showcase_media| %>
  <tr>
    <td><%=h showcase_media.media_file_name %></td>
    <td><%=h showcase_media.media_content_type %></td>
    <td><%=h showcase_media.media_file_size %></td>
    <td><%=h showcase_media.caption %></td>
    <td><%=h showcase_media.showcase_id %></td>
    <td><%= link_to 'Show', showcase_media %></td>
    <td><%= link_to 'Edit', edit_showcase_media_path(showcase_media) %></td>
    <td><%= link_to 'Destroy', showcase_media, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New showcase_media', new_showcase_media_path %>