
<div id="middleCol">
	<p><%= link_to "View All Events", events_path, :class => 'admin' %> <%= link_to "View All Announcements", events_path(:t=>'News'), :class => 'admin' %></p>
  <h1><%=h @event.title %></h1>
	<p>
	  <i><%= @event.blurb %></i>
	</p>
<p class="list_date">
  <%=h @event.start_date.strftime("%A %B %e, %Y") %>  <%=h  " - " + @event.end_date.strftime("%A %B %e, %Y") if @event.end_date != @event.start_date %>
</p>
<div class="description">
  <%== @event.description %>
</div>

<% if @event.url.any? %>
<p class="instructions">
  <b>For more information:</b>
  <%= link_to @event.url, @event.url %>
</p>
<% end %>

	<span class="list_date">

		[<%= @event.department.dept_name %>] </span> 


<% if admin? %>
<br />
<%= link_to 'Edit', edit_event_path(@event), :class=>'admin' %> 
<%= link_to 'Back', events_path(:t=>@event.event_type), :class=>'admin' %>
<% end %>
</div>
<div id="rightCol">
</div>