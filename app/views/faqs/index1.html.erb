<h1>Listing faqs</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th>Url</th>
    <th>Featured</th>
    <th>Position</th>
    <th>Department</th>
  </tr>

<% @faqs.each do |faq| %>
  <tr>
    <td><%=h faq.question %></td>
    <td><%=h faq.answer %></td>
    <td><%=h faq.url %></td>
    <td><%=h faq.featured %></td>
    <td><%=h faq.position %></td>
    <td><%=h faq.department_id %></td>
    <td><%= link_to 'Show', faq %></td>
    <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
    <td><%= link_to 'Destroy', faq, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New faq', new_faq_path %>